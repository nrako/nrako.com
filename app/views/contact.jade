section#contact
  div.page-header
    h1 Lets get in Touch!
  
  p Don't wait go ahead!
  
  form.well.form-contact(method="post", action='/contact')
    
    if locals.msg
      div.alert.alert-success!= msg
        a.close(data-dismiss="alert", href="#") &times;
    
    div.row-fluid
      label(for="headline") Headline
      input.span11(id="headline", name="headline", placeholder="Catchy headline", required="required")
    
    div.row-fluid
      label(for="msg") Message
      textarea.span11(id="msg", name="msg", required="requried", placeholder="Short is all good...")
    
    div.row-fluid
      label(for="email") Email
      input.span6(id="email", name="email", type="email", placeholder="john.doe@example.com", required="required")

    div.form-actions
      button.btn.btn-primary(type="submit") Submit
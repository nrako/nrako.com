{
  "name": "nrako.com",
  "version": "0.0.1",
  "description": "nrako.com website",
  "main": "index.js",
  "repository": "git@github.com:nrako/nrako.com.git",
  "author": "Nicholas Rakoto <nico@nrako.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next",
    "export": "next export",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --list-different \"**/*.{js,json,md}\"",
    "start": "next start",
    "test": "jest",
    "test:ci": "docker-compose -p tests run -p 3000 --rm web npm run build && npm run test",
    "test:ciu": "docker-compose -p tests run -p 3000 --rm web npm run test:_ciu",
    "test:_ciu": "next build && jest -u"
  },
  "dependencies": {
    "@zeit/next-mdx": "^1.1.0",
    "next": "^6.1.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "remark-highlight.js": "^5.0.0"
  },
  "devDependencies": {
    "@mdx-js/mdx": "^0.12.0",
    "chalk": "^2.4.1",
    "eslint": "^5.0.1",
    "jest": "^22.4.4",
    "jest-image-snapshot": "^2.4.3",
    "prettier": "^1.13.7",
    "puppeteer": "^1.5.0",
    "rimraf": "^2.6.2"
  },
  "now": {
    "type": "npm",
    "env": {
      "NODE_ENV": "production"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "package.json",
        "options": {
          "printWidth": 120
        }
      }
    ]
  }
}

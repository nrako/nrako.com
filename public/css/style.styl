*
  position: relative

body
  background-image: url('/img/pattern/rawpaper.gif')
  padding: 0 20px 0 20px
  //background-color: #e3e2dd

@import "fonts"
@import "socialicons"

.main
  background-color: #fff
  margin-bottom: 100px !important
  padding: 20px

threedee(color)
  color: color;
  text-shadow: 0 2px 0 darken(color, 14%), 0 4px 0 darken(color, 16%), 0 6px 0 darken(color, 18%), 0 8px 0 darken(color, 20%), 3px 8px 15px rgba(0,0,0,0.1), 3px 8px 5px rgba(0,0,0,0.3)

.hero-unit
  text-align: center
  h1
    font-size: 38px

h1
  font-size: 25px
  text-align: center

.page-header
  margin-bottom: 10px
  h1
    margin-bottom: 0px

@media (max-width: 480px)
  .hero-unit
    padding: 30px
    h1
      font-size: 35px
  h1
    font-size: 30px
  h2
    font-size: 25px
  h3
    font-size: 20px

  .page-header
    margin: 20px 0 10px

#flashmsgs
  .alert
    margin: 2px auto

@media (min-width: 880px)
  .container-fluid
    width: 800px
    margin: auto
  #flashmsgs
    .alert
      width: 700px

.form-contact
  textarea
    height: 150px

.form-actions
  border-radius: 5px
  padding: 10px

footer
  height: 200px

.strikethrough
  text-transform: line-trough

#flashmsgs
  position: fixed
  left: 0
  right: 0
  z-index: 1020

.socialnetworks
  text-align: center

.alert .close
  position: absolute
  top: 1px
  right: 5px


@import 'nib'
@import 'font'

*,
*:after,
*:before
  position: relative
  box-sizing: border-box

html, body
  height: 100%
  width: 100%

body
  color: #333333
  background-color: #fff
  display: table
  //background: url("data:image/jpg;base64,")

cite
  display: block
  text-align: right

h1
h2
h3
h4
h-5
h6
  font-family: 'Open Sans Condensed','Myriad Pro','Lucida Grande','Lucida Sans Unicode','Lucida Sans',Geneva,Verdana,sans-serif

p
  font-family: Tinos,Georgia,Cambria,'Times New Roman',Times,serif
  font-size: 22px
  line-height: 1.45
  font-weight: 400

.container
  height: 100%
  display: table-cell;
  vertical-align: middle

header
  margin: 0 auto
  max-width: 700px
  text-align: center

section
  margin: 0 auto
  max-width: 700px

@media (max-width:800px)
  body
    padding-top: 50px

.menu
  position: fixed
  z-index: 1
  top: 0
  left: 0
  width: 100%
  height: 0
  border-width: 0px
  border-style: solid
  border-color: #111
  background-color: rgba(0,0,0,0)
  backface-visibility: hidden
  transition: border-width 0.3s, background-color 0.3s, height 0s 0.3s

.menu.menu-open
  height: 100%
  border-width: 0px 0px 50px 0px
  //border-width: 0px 0px 50px 150px
  background-color: rgba(0,0,0,0.3)
  transition: border-width 0.3s, background-color 0.3s

.overlay
  position: absolute
  width: 100%

.menu-open .overlay
  height: 100%

.menu-trigger
  z-index: 2
  position: fixed
  top: 15px
  left: 35px
  display: block
  width: 50px
  height: 50px
  cursor: pointer
  transition: all 0.3s

@media (max-width:500px)
  .menu-trigger
    left: 5px
    top: 0

.menu-trigger span
  position: absolute
  top: 50%
  left: 0
  display: block
  width: 100%
  height: 4px
  margin-top: -2px
  background-color: #000
  font-size: 0px
  -webkit-touch-callout: none
  user-select: none
  transition: background-color 0.3s

.menu-open .menu-trigger span
  background-color: transparent

.menu-trigger span:before,
.menu-trigger span:after
  position: absolute
  left: 0
  width: 100%
  height: 100%
  background: #000
  content: ''
  transition: transform 0.3s

.menu-trigger span:before
  transform: translateY(-250%)

.menu-trigger span:after
  transform: translateY(250%)

.menu-open .menu-trigger span:before
  transform: translateY(0) rotate(45deg)
  background: #fff

.menu-open .menu-trigger span:after
  transform: translateY(0) rotate(-45deg)
  background: #fff

.menu ul
  position: fixed
  margin: 0
  padding: 0
  list-style: none

.menu ul:first-of-type
  top: 75px
  left: 0

.menu ul:nth-of-type(2)
  right: 0
  bottom: 0

.menu ul li,
.menu ul li a
  display: block

.menu ul:nth-of-type(2) li
  float: left
  font-size: 0px

.menu ul li
  visibility: hidden
  opacity: 0
  transition: transform 0.3s, opacity 0.2s, visibility 0s 0.3s

.menu.menu-open ul:first-of-type li,
.menu.menu-open ul:nth-of-type(2) li
  visibility: visible
  opacity: 1
  transition: transform 0.3s, opacity 0.3s

.menu ul:first-of-type li
  width: 150px
  height: 50px
  line-height: 50px
  transform: translate3d(-100%,50%,0)

.menu.menu-open ul:first-of-type li
  transform: translate3d(0,0,0)

.menu ul:nth-of-type(2) li
  width: 50px
  height: 40px
  line-height: 50px
  transform: scale(0)

for num in 1 2 3 4 5 6
  .menu.menu-open ul:nth-of-type(2) li:nth-child({num})
    height: num
    transition-delay: num * 0.1s

.menu.menu-open ul:nth-of-type(2) li
  -webkit-transform: scale(1)
  transform: scale(1)

.menu ul li a
  display: block
  outline: none
  text-decoration: none

.menu ul:first-of-type li a
  padding: 0 20px
  box-shadow: inset 0 1px rgba(0,0,0,0.2)
  color: #fff
  text-transform: uppercase
  letter-spacing: 1px
  font-size: 1em
  transition: color 0.2s

.menu ul:first-of-type li:last-child a
  box-shadow: inset 0 1px rgba(0,0,0,0.2), inset 0 -1px rgba(0,0,0,0.2)

.menu ul:nth-of-type(2) li a
  color: transparent
  text-align: center
  font-size: 0px

.menu ul li a:before
  color: #fff
  font-size: 24px
  transition: color 0.2s

.menu ul:first-of-type li a:hover,
.menu ul:first-of-type li a:focus,
.menu ul li a:hover:before,
.menu ul li a:focus:before
  color: #1abc9c


.profile
  position: absolute
  bottom: 50px
  left: 20px
  text-align: center
  margin-top: 80px
  display: inline-block
  margin-left: 20px
  h1
    font-size: 0.9em
    transform: translateY(-250%)
    transition: all 0.2s
    opacity: 0
  p
    font-size: 0.8em
    margin: 0 auto
  img
    transform: scale(0)
    transition: all 0.2s
    margin: 0 auto
    width: 100px
    height: 100px
    border-radius: 50%
    box-shadow: 0 0 0 3px #fff, 0 0 0 4px #999, 0 2px 5px 4px rgba(0,0,0,.2)

.menu-open .profile
  h1
    transition-delay: 0.4s
    transform: translateY(0)
    opacity: 0.9
  img
    transition-delay: 0.4s
    transform: scale(1)